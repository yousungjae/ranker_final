<div class="wrapper bg-dark-white">
	<div class="heading-banner-area overlay-bg">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="heading-banner">
						<div class="heading-banner-title">
							<!--<img src="<%asset_path ='logo/Ranker.png' %>" alt="">-->
							<!--<a href="#"><img src="<%= asset_path 'banner/5.jpg' %>" alt="" /></a>-->
							<img src="<%= asset_path 'logo/Ranker.png' %>" alt=""/>
							<!--<h2></h2>-->
						</div>
						<div class="breadcumbs pb-15">
							<ul>
								<li><a href="/">Home</a></li>
								<li>Request</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	
	<div class="product-area pt-80 pb-80 product-style-2">
		<div class="container">
			<div class="row">
				
				<div class="col-md-3 col-sm-12 col-xs-12">
	                <!-- Widget-Search start -->
					<aside class="widget widget-search mb-30">
						<form action="#">
							<input type="text" placeholder="Search here..." />
							<button type="submit">
								<i class="zmdi zmdi-search"></i>
							</button>
						</form>
					</aside>
					<!-- Widget-search end -->
					<!-- Widget-Categories start -->
					<aside class="widget widget-categories  mb-30">
						<div class="widget-title">
							<a href="/requests"><h4>Request</h4></a>
						</div>
					</aside>
					
					<aside class="widget widget-banner hidden-sm">
						<div class="widget-info widget-banner-img">
							<a href="http://www.multicampus.co.kr"><img src="<%= asset_path 'banner/add1.png' %>" alt="" /></a>
						</div>
					</aside>
        </div>
        
        
        <div class="col-md-9 col-sm-12 col-xs-12">
					<!-- tootle-Content End -->
	
							
              <div class="elements-accordions pt-80 pb-80">
                <div class="tab-content ">
                  <div class="tab-pane active" id="elements-preview-1">
              			<div class="row">
                    	<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                      	<%= link_to 'New request', new_request_path, class:"button-one submit-button mt-15" %>
                      </div>
                    </div>
                    
                    <div class="row">
                    	<% count = Request.count + 1 %>
                    	<div class="col-4">순번</div>
                    	<div class="col-4">제목</div> 
                    	<div class="col-4">아이디</div><br>
                    	
                    	<% @requests.reverse_each do |req| %>
                      	<div class="col-4">
                      		<%= count = count - 1 %>
                    		</div>
                    		<div class="col-4">
                      		<%= link_to req.title, request_path(req) %>
                    		</div>
                    		<div class="col-4">
                    			<%= req.user.get_id %>
                    		</div>
                    	<% end %>
                  	</div>
                       
                  </div>
              	</div>
          		</div>
	      
      	</div>
	        
	        
	    </div>
		</div>
	</div>
	
	
</div>